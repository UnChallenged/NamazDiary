<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="#FFFFFF"
    tools:context="com.codex.namazdiary.KazaNAMAZ">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fajar"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fajrcount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/FajrIncr"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/addbtnblackborder"
            android:text="+1" />

        <Button
            android:id="@+id/FajrDec"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/addbtnblackborder"
            android:text="-1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zohar"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/zoharcount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ZoharIncr"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/addbtnblackborder"
            android:text="+1" />

        <Button
            android:id="@+id/ZoharDec"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/addbtnblackborder"
            android:text="-1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asar"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/asarcount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/AsarIncr"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/addbtnblackborder"
            android:text="+1" />

        <Button
            android:id="@+id/Asardec"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/addbtnblackborder"
            android:text="-1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magrib"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/maghribcount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/MaghribInc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/addbtnblackborder"
            android:text="+1" />

        <Button
            android:id="@+id/MaghribDec"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/addbtnblackborder"
            android:text="-1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esha"
            android:textColor="@color/browser_actions_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eshacount"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/EshaInc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/addbtnblackborder"
            android:text="+1" />

        <Button
            android:id="@+id/EshaDec"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/addbtnblackborder"
            android:text="-1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsbmt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/addbtn"
            android:shadowColor="@color/colorPrimary"
            android:text="Submit"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btncncl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/addbtn"
            android:text="Cancel"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adviewkaza"
            android:layout_width="360dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/others"
            />

</LinearLayout>
